<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
</head>
<body>
    <h1>Invoice</h1>
    <p>Vendor: {{@vendorName}}</p>
    <p>Client: {{@clientName}}</p>
    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each @work}}
            <tr>
                <td>{{@description}}</td>
                <td>{{@hours}}</td>
                <td>{{@rate}}</td>
                <td>{{@total}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
